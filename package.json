{
  "name": "mtggrizzly",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "clean": "npm run clean:eslint && npm run clean:prettier",
    "clean:eslint": "npx eslint --fix .",
    "clean:prettier": "npx prettier --write .",
    "dev": "next dev",
    "lint": "next lint",
    "pr:create": "gh pr create --web",
    "prepare": "husky install",
    "start": "next start",
    "test": "npm run test:eslint && \nnpm run test:css && \nnpm run test:prettier && \nnpm run test:types && \nnpm run test:types:cypress && \nnpm run test:code",
    "test:code": "npm run test:jest && npm run test:cypress:headless",
    "test:jest": "npx jest",
    "test:jest:watch": "npx jest --watch",
    "test:jest:watch:changed": "npx jest --watch --only-changed",
    "test:cypress:headless": "TS_NODE_COMPILER=1 npx cypress run",
    "test:cypress:ui": "TS_NODE_COMPILER=1 npx cypress open",
    "test:css": "echo 'test:css is not yet configured'",
    "test:eslint": "npx eslint .",
    "test:prettier": "npx prettier --check .",
    "test:types": "npx tsc --project ./tsconfig.json --noEmit",
    "test:types:cypress": "npx tsc --project cypress/tsconfig.json"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-toggle-group": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@vercel/speed-insights": "^1.0.5",
    "autoprefixer": "^10.4.16",
    "eslint-config-next": "^14.0.4",
    "next": "^14.0.4",
    "postcss": "^8.4.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "warning": "^4.0.3"
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.0.1",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "cypress": "^13.6.2",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.2",
    "prettier-plugin-tailwindcss": "^0.5.11"
  }
}
